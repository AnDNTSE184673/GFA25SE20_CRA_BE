{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=SelfDriveCRA;Username=postgres;Password=12345;Integrated Security=true;Timeout=30;"
  },
  "SMTPSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "SenderName": "Name",
    "SenderEmail": "senderName@email.com",
    "Username": "realEmail@email.com",
    "Password": "16-char-app-password",
    "EnableSsl": true,
    "DefaultCredential": false
  },
  "Authentication": {
    "Google": {
      "ClientSecret": "Google Cloud OAuth Client Secret",
      "ClientId": "Google Cloud OAuth ClientID"
    }
  },
  "JWT": {
    //"Secret": "SecretKeySecretKeySecretKeySecretKeySecretKeySecretKey",
    "Secret": "a-string-secret-at-least-256-bits-long",
    "Issuer": "<issuer>",
    "Audience": "<audience>",
    "ExpirationTimeMinutes": 30,
    "RefreshTokenDay": 1
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "YourAppName"
    }
  }
}
